DATA_DIR=data
CACHE_DIR=data/cache
DATASET_PATH=data/dataset.jsonl
RESULTS_PATH=data/results.jsonl

LLM_PROVIDER=openai
LLM_API_BASE=https://api.openai.com/v1
LLM_MODEL=gpt-4.1-mini
OPENAI_API_KEY=

ACTIONS_PER_15MIN=45
MIN_ACTION_JITTER_MS=10
MAX_ACTION_JITTER_MS=120

HEADLESS=false

# Browser tuning
# JSON list for args if overriding; default adds AutomationControlled disable. Add no-sandbox, dev-shm fixes if needed
CHROMIUM_ARGS=["--disable-blink-features=AutomationControlled"]
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/124.0.0.0 Safari/537.36
USER_DATA_DIR=data/pw_user
SLOW_MO_MS=0

# Scraper scroll tuning
SCRAPE_SCROLL_WAIT_MS=2048
SCRAPE_SCROLL_STEP_PX=768
SCRAPE_SCROLL_MAX_ITERS=75
SCRAPE_SCROLL_STABLE_ITERS=4

# API server
# Set API_HOST=0.0.0.0 to listen on all interfaces (LAN)
API_HOST=127.0.0.1
API_PORT=8000
